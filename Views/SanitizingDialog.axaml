<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Desktop_client_api_kod.Views.SanitizingDialog"
        Title="Sanitizing File..."
        Width="400"
        Height="200"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="Full"
        ShowInTaskbar="True">
    
    <Border Background="#FFFFFF" Padding="32">
        <StackPanel Spacing="24" VerticalAlignment="Center">
            
            <!-- İkon + Başlık -->
            <StackPanel Spacing="16" HorizontalAlignment="Center">
                
                <!-- Mavi Daire + Upload İkonu -->
                <Grid Width="64" Height="64" HorizontalAlignment="Center">
                    <Ellipse Width="64" Height="64" Fill="#6E92E1"/>
                    <Image Source="/Assets/cloud-manual.png"
                           Width="32" 
                           Height="32"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Başlık -->
                <TextBlock Text="Sanitizing File..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           TextAlignment="Center"/>
                
            </StackPanel>
            
            <!-- Dosya Adı -->
            <TextBlock x:Name="FileNameText"
                       Text="document.pdf"
                       FontSize="14"
                       Foreground="#6B7280"
                       TextAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="336"/>
            
            <!-- Progress Spinner -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="8" 
                        HorizontalAlignment="Center">
                <TextBlock Text="●"
                           FontSize="14"
                           Foreground="#6E92E1"
                           VerticalAlignment="Center">
                    <TextBlock.Styles>
                        <Style Selector="TextBlock">
                            <Style.Animations>
                                <Animation Duration="0:0:1" IterationCount="Infinite">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="Opacity" Value="1.0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="50%">
                                        <Setter Property="Opacity" Value="0.3"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="Opacity" Value="1.0"/>
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </TextBlock.Styles>
                </TextBlock>
                
                <TextBlock x:Name="StatusText"
                           Text="Uploading and sanitizing..."
                           FontSize="13"
                           Foreground="#6B7280"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
    
</Window>