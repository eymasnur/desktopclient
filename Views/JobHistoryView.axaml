<!-- ================================================================ -->
<!-- JOB HISTORY VIEW - İş Geçmişi Ekranı                            -->
<!-- ================================================================ -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Desktop_client_api_kod.Views.JobHistoryView">

    <Grid ColumnDefinitions="250,*">
        
        <!-- ============================================================ -->
        <!-- SOL SIDEBAR (Grid.Column="0")                                 -->
        <!-- ============================================================ -->
        <Border Grid.Column="0" 
                Background="#F3F6F9"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,1,0">
            
            <StackPanel>
                
                <!-- LOGO -->
                <StackPanel Margin="16,21.5,72,38.6" 
                            HorizontalAlignment="Left">
                    <Image Source="/Assets/klearis-logo-transparent-white.png"
                        Height="52"
                        Stretch="Uniform"
                        HorizontalAlignment="Left"/>
                </StackPanel>
                
                <!-- SANİTİZE FILE BUTONU -->
                <Button x:Name="SanitizeFileButton"
                        Height="40" 
                        Margin="14,0,14,12"
                        Background="#6E92E1" 
                        Foreground="White"
                        BorderThickness="0" 
                        CornerRadius="6"
                        FontSize="14" 
                        FontWeight="Medium"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" 
                        Padding="14,11.5">
                    <TextBlock Text="Sanitize File"/>
                </Button>
                
                <!-- MENÜ: JOB HISTORY + SETTINGS -->
                <StackPanel Spacing="4" Margin="14,0,14,0">
                    
                    <!-- JOB HISTORY -->
                    <Button x:Name="JobHistoryButton"
                            Height="40" 
                            Background="Transparent" 
                            Foreground="#6B7280"
                            BorderThickness="0" 
                            CornerRadius="6"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center" 
                            Padding="8,10">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Image Source="/Assets/file-history.png"
                                   Width="20" Height="20"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Job History" 
                                       FontSize="14" 
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- SETTINGS -->
                    <Button x:Name="SettingsButton"
                            Height="40" 
                            Background="Transparent" 
                            Foreground="#6B7280"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center" 
                            Padding="8,10">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Image Source="/Assets/Settings.png"
                                   Width="16" Height="16"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" 
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
            </StackPanel>
            
        </Border>
        
        <!-- ============================================================ -->
        <!-- SAĞ CONTENT AREA (Grid.Column="1")                           -->
        <!-- ============================================================ -->
        <Panel Grid.Column="1" Background="#FFFFFF">
            
            <DockPanel LastChildFill="True">
                
                <!-- ===================================================== -->
                <!-- ÜST BAŞLIK ALANI (Dock="Top")                         -->
                <!-- ===================================================== -->
                <Border DockPanel.Dock="Top" 
                        Background="#FFFFFF"                      
                        Padding="32,32,32,24"
                        BorderBrush="#E5E7EB"
                        BorderThickness="0,0,0,0">
                    
                    <Grid ColumnDefinitions="*,Auto">
                        
                        <!-- SOL: "Job History" Başlığı -->
                        <StackPanel Grid.Column="0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Job History"
                                    FontSize="24"
                                    FontWeight="SemiBold"
                                    Foreground="#1F2937"
                                    VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- SAĞ: "Sanitized Files" Butonu -->
                        <Button Grid.Column="1"
                                x:Name="SanitizedFilesButton"
                                Height="40"
                                Padding="16,8"
                                Background="White"
                                Foreground="#6E92E1"
                                BorderBrush="#6E92E1"
                                BorderThickness="1"
                                CornerRadius="6"
                                FontSize="14"
                                FontWeight="Medium">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Image Source="/Assets/sanitize-file.png"
                                    Width="16" Height="16"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Sanitized Files"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="#6E92E1"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                    </Grid>
                </Border>
                
                <!-- ===================================================== -->
                <!-- BOŞ DURUM PANELI (NO DATA)                            -->
                <!-- ===================================================== -->
                <Border x:Name="NoDataPanel"
                        DockPanel.Dock="Top"
                        IsVisible="True"
                        Background="#FFFFFF"
                        Margin="0,100,0,0">
                    
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Spacing="24">
                        
                        <Grid Width="80" Height="80"
                              HorizontalAlignment="Center">
                            <Image Source="/Assets/Ellipse1.png"
                                   Width="80" Height="80"
                                   Stretch="Uniform"/>
                            <Image Source="/Assets/search-data.png"
                                   Width="80" Height="80"
                                   Stretch="Uniform"/>
                        </Grid>
                        
                        <TextBlock Text="No job history"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="#363D48"
                                   TextAlignment="Center"/>
                        
                        <TextBlock Text="Sanitize files to start now"
                                   FontSize="15"
                                   Foreground="#495057"
                                   TextAlignment="Center"/>
                        
                        <Button Width="128" Height="40"
                                Content="Sanitize File"
                                Background="#5A7FD1"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontSize="13"
                                FontWeight="Medium"
                                Padding="14,11.5"/>
                        
                    </StackPanel>
                </Border>
                
                <!-- ===================================================== -->
                <!-- TABLO ALANI (Veri gelince görünecek)                  -->
                <!-- ===================================================== -->
                <ScrollViewer x:Name="TablePanel"
                              DockPanel.Dock="Top"
                                IsVisible="False"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled"
                                Background="#FFFFFF"
                                Padding="0"
                                Margin="0">
                        
                        <Border Margin="32,24,32,32"
                                HorizontalAlignment="Stretch"
                                Background="#FFFFFF"
                                CornerRadius="8"
                                BorderBrush="#E5E7EB"
                                BorderThickness="0"
                                Padding="0">
                            
                            <StackPanel Spacing="0" Margin="0">
                                
                                <!-- ========================================= -->
                                <!-- HEADER - 42PX FIXED HEIGHT                -->
                                <!-- ========================================= -->
                                <Border Background="#FFFFFF"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="0,0,0,1"
                                        Padding="24,0,24,0"
                                        Height="42"
                                        Margin="0"
                                        CornerRadius="0,0,0,0">
                                    
                                    <Grid ColumnDefinitions="654,159,107,168,72" Height="42">
                                        
                                        <TextBlock Grid.Column="0" 
                                                Text="File Name" 
                                                FontSize="13" 
                                                FontWeight="SemiBold" 
                                                Foreground="#6B7280"
                                                VerticalAlignment="Center"
                                                Margin="0"
                                                Padding="0"/>
                                        <TextBlock Grid.Column="1" 
                                                Text="Status" 
                                                FontSize="13" 
                                                FontWeight="SemiBold" 
                                                Foreground="#6B7280"
                                                VerticalAlignment="Center"
                                                Margin="0"
                                                Padding="0"/>
                                        <TextBlock Grid.Column="2" 
                                                Text="Size" 
                                                FontSize="13" 
                                                FontWeight="SemiBold" 
                                                Foreground="#6B7280"
                                                VerticalAlignment="Center"
                                                Margin="0"
                                                Padding="0"/>
                                        <TextBlock Grid.Column="3" 
                                                Text="Creation Time" 
                                                FontSize="13" 
                                                FontWeight="SemiBold" 
                                                Foreground="#6B7280"
                                                VerticalAlignment="Center"
                                                Margin="0"
                                                Padding="0"/>
                                        <TextBlock Grid.Column="4" 
                                                Text="Actions" 
                                                FontSize="13" 
                                                FontWeight="SemiBold" 
                                                Foreground="#6B7280"
                                                TextAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="0"
                                                Padding="0"/>
                                    </Grid>
                                </Border>
                                
                                <!-- ========================================= -->
                                <!-- BODY - DYNAMIC ROWS                       -->
                                <!-- ========================================= -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Disabled"
                                            MaxHeight="600"
                                            Padding="0"
                                            Margin="0">
                                    
                                    <StackPanel x:Name="JobListPanel" 
                                                Spacing="0"
                                                Margin="0">
                                        <!-- DİNAMİK VERİ BURAYA GELİR -->
                                    </StackPanel>
                                    
                                </ScrollViewer>
                                
                            </StackPanel>
                            
                        </Border>
                        
                    </ScrollViewer>
                
            </DockPanel>
            
        </Panel>
        
    </Grid>

</UserControl>